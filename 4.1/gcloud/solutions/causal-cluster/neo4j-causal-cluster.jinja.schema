imports:
  - name: common.py
    path: common/common.py
  - name: default.py
    path: common/default.py
  - name: password.py
    path: common/password.py
  - name: path_utils.jinja
    path: common/path_utils.jinja
  - name: vm_instance.py
    path: common/vm_instance.py
  - name: vm_multiple_instances.py
    path: common/vm_multiple_instances.py
  - name: node-startup-script.sh.jinja
    path: node-startup-script.sh.jinja
  - name: waiter.jinja
    path: waiter.jinja  

info:
  version: '1.0'
  title: Neo4j Enterprise Causal Cluster Template

required:
  - zone
  - machineType
  - clusterNodes
  - readReplicas
  - network
  - bootDiskType
  - bootDiskSizeGb

properties:
  zone:
    type: string
    default: us-east1-b
    x-googleProperty:
      type: GCE_ZONE
  clusterNodes:
    type: string
    enum: 
      - '3'
      - '4'
      - '5'
      - '6'
      - '7'
      - '8'
    default: '3'
  readReplicas:
    type: string
    enum:
      - '0'
      - '1'
      - '2'
      - '3'
      - '4'
      - '5'
    default: '0'
  machineType:
    type: string
    default: n1-standard-4
    x-googleProperty:
      type: GCE_MACHINE_TYPE
      zoneProperty: zone
      gceMachineType:
        minCpu: 2
        minRamGb: 8
  network:
    type: string
    default: default
    x-googleProperty:
      type: GCE_NETWORK
  subnetwork:
    type: string
    x-googleProperty:
      type: GCE_SUBNETWORK
      zoneProperty: zone
      gceSubnetwork:
        networkProperty: network
  externalIP:
    type: string
    enum:
      - Ephemeral
      - None
    default: Ephemeral
  enableTcp7473:
    type: boolean
    default: True
    x-googleProperty:
      type: GCE_FIREWALL
      gceFirewall:
        networkProperty: network
  tcp7473SourceRanges:
    type: string
    x-googleProperty:
      type: GCE_FIREWALL_RANGE
      gceFirewallRange:
        firewallProperty: enableTcp7473
  enableTcp7687:
    type: boolean
    default: True
    x-googleProperty:
      type: GCE_FIREWALL
      gceFirewall:
        networkProperty: network
  tcp7687SourceRanges:
    type: string
    x-googleProperty:
      type: GCE_FIREWALL_RANGE
      gceFirewallRange:
        firewallProperty: enableTcp7687
  bootDiskType:
    type: string
    default: pd-standard
    x-googleProperty:
      type: GCE_DISK_TYPE
      zoneProperty: zone
  bootDiskSizeGb:
    type: integer
    default: 200
    minimum: 10
    maximum: 10000
    x-googleProperty:
      type: GCE_DISK_SIZE
      gceDiskSize:
        diskTypeProperty: bootDiskType

outputs:
  deployment:
    type: string
  project:
    type: string
  username:
    type: string
  password:
    type: string
  vm1Id:
    type: string
  vm1URL:
    type: string
  vm1Name:
    type: string
  vm1SelfLink:
    type: string
  vm2Id:
    type: string
  vm2URL:
    type: string
  vm2Name:
    type: string
  vm2SelfLink:
    type: string
  vm3Id:
    type: string
  vm3URL:
    type: string
  vm3Name:
    type: string
  vm3SelfLink:
    type: string
