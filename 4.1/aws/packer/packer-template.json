{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "neo4j_version": "1:4.1.3",
    "neo4j_edition": "enterprise",
    "region": "us-east-1",
    "instance_type": "t2.micro",
    "destination_regions": "us-east-1,us-east-2,us-west-1,us-west-2,eu-west-1,eu-west-3,eu-central-1,ap-northeast-1,ap-northeast-2,ap-south-1,sa-east-1,ap-southeast-1,ap-southeast-2",
    "base_owner": "099720109477",
    "apoc_jar": "https://github.com/neo4j-contrib/neo4j-apoc-procedures/releases/download/4.1.0.2/apoc-4.1.0.2-all.jar",
    "gds_jar": "https://github.com/neo4j/graph-data-science/releases/download/1.3.4/neo4j-graph-data-science-1.3.4-standalone.jar"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `region`}}",
      "subnet_id": "{{user `subnet_id`}}",
      "security_group_id": "{{user `security_group_id`}}",
      "associate_public_ip_address": true,
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/*ubuntu-bionic-18.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": "{{user `base_owner`}}",
        "most_recent": true
      },
      "instance_type": "{{ user `instance_type` }}",
      "ssh_username": "ubuntu",
      "ami_name": "neo4j-{{user `neo4j_edition`}}-{{user `neo4j_version` | clean_ami_name}}-apoc {{isotime \"2006-01-02T03_04_05Z\"}}",
      "ami_regions": "{{user `destination_regions`}}",
      "ami_groups": [
        "all"
      ],
      "tags": {
        "neo4j-install-date": "{{isotime \"2006-01-02T03:04:05Z\"}}",
        "neo4j-version": "{{user `neo4j_version`}}",
        "neo4j-edition": "{{user `neo4j_edition`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "./neo4j.conf",
      "destination": "/home/ubuntu/neo4j.conf"
    },
    {
      "type": "file",
      "source": "./neo4j-community.conf",
      "destination": "/home/ubuntu/neo4j-community.conf"
    },
    {
      "type": "file",
      "source": "./pre-neo4j.sh",
      "destination": "/home/ubuntu/pre-neo4j.sh"
    },
    {
      "type": "file",
      "source": "./reset-password-aws.sh",
      "destination": "/home/ubuntu/reset-password-aws.sh"
    },
    {
      "type": "file",
      "source": "../../licensing",
      "destination": "/home/ubuntu"
    },
    {
      "type": "shell",
      "script": "./install-neo4j.sh",
      "environment_vars": [
        "neo4j_version={{ user `neo4j_version` }}",
        "neo4j_edition={{ user `neo4j_edition` }}",
        "apoc_jar={{ user `apoc_jar` }}",
        "gds_jar={{ user `gds_jar`  }}"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "sudo rm -f /home/ubuntu/.ssh/authorized_keys",
        "sudo rm -f /root/.ssh/authorized_keys",
        "sudo rm -f /home/ubuntu/*.conf"
      ]
    }
  ]
}